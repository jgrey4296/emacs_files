#Showing how to get the best alpha for a model:
estimator = None
data = None
targets = None
test_data = None
test_targets = None
alphas = np.logspace(-1,1,10)

scores = [estimator.set_params(alpha=alpha)
         .fit(data,targets)
         .score(test_data,test_targets)
         for alpha in alpha]
best_alpha = alpha[scores.index(max(scores))]
