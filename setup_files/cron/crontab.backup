SHELL=/usr/local/bin/bash
BASH_ENV=/Volumes/documents/github/emacs_files/setup_files/exports.bash

### DAILY:
# Speak the time every 2 hours
0 */2 * * * /Volumes/documents/github/emacs_files/setup_files/cron/time_announce.py

# Regularly Tweet an entry from my bibtex
7,23,42 */1 * * * /Volumes/documents/github/emacs_files/setup_files/cron/auto_bibtex_tweet.py

# Regularly tweet an image from the whitelist
11,38,52 */1 * * * /Volumes/documents/github/emacs_files/setup_files/cron/auto_image_tweet.py

# Update mail every 6 hours
0 */6 * * * /usr/local/bin/mbsync -a

### WEEKLY:
## MON
# Run updates at 3am on mondays
0 3 * * mon /Volumes/documents/github/emacs_files/setup_files/cron/maintenance.sh

# backup cron definitions at 4am on mondays
0 4 * * mon crontab -l > ~/.doom.d/setup_files/cron/crontab.backup

## TUES
# at 4.30am on tuesdays, find any corrupted pdfs
30 4 * * tue find /Volumes/documents/MEGA/AutoSync/pdflibrary -name "*.pdf" | xargs -I {} echo "pdftk {} dump_data_utf8 2>&1 1>/dev/null | awk '/Error/ { print \"{}: \" \$0}'" | bash > /Volumes/documents/github/writing/resources/cron_reports/pdf_verification

## WED
# 3am : clean bibtex
0 3 * * wed find ~/github/writing/resources/bibliography -name "*.bib" | xargs -I {} echo "cd ~/github/py_bookmark_organiser ; bkmkorg/filters/bibtex/clean.py -t {} -o {} " | bash
# 4am : clean tags
0 4 * * wed find ~/github/writing/resources/bibliography -name "*.bib" | xargs -I {} echo "cd ~/github/py_bookmark_organiser ; bkmkorg/filters/tag/clean.py -t {} -c ~/github/writing/resources/substitutions " | bash
# 5am : update tag totals
0 5 * * wed cd ~/github/py_bookmark_organiser ; bkmkorg/describers/tag/totals.py -t ~/github/writing/resources/bibliography -t ~/github/writing/resources/bookmarks/main_bookmarks.html -t ~/mega/twitterthreads -c ~/github/writing/resources/substitutions -o ~/github/writing/resources/cron_reports/totals
# 6am : update tag graph
0 6 * * wed cd ~/github/py_bookmark_organiser ; bkmkorg/describers/tag/graph.py -t ~/github/writing/resources/bibliography -t ~/github/writing/resources/bookmarks/main_bookmarks.html -t ~/mega/twitterthreads -o ~/github/writing/resources/cron_reports/tags.edgelist
# 7am : update tag timelines
0 7 * * wed cd ~/github/py_bookmark_organiser ; bkmkorg/describers/bibtex/timelines.py --library ~/github/writing/resources/bibliography --output ~/github/writing/resources/tag_timelines
